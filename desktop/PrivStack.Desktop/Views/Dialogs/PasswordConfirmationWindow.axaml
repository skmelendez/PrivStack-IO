<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="using:PrivStack.Desktop.Controls"
        mc:Ignorable="d"
        x:Class="PrivStack.Desktop.Views.Dialogs.PasswordConfirmationWindow"
        Title="Vault Unlock"
        Width="460" Height="480"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SystemDecorations="None"
        Background="Transparent"
        TransparencyLevelHint="Transparent">

    <Border Margin="20"
            Background="{DynamicResource ThemeBackgroundBrush}"
            CornerRadius="12"
            BorderBrush="{DynamicResource ThemeBorderBrush}"
            BorderThickness="1"
            Classes="modal">

        <StackPanel Spacing="16" Margin="32">

            <!-- Drag region: Lock Icon + Title -->
            <Border x:Name="DragRegion" Background="Transparent"
                    PointerPressed="OnDragRegionPointerPressed"
                    HorizontalAlignment="Stretch" Cursor="Arrow">
                <StackPanel Spacing="12" HorizontalAlignment="Center">
                    <Border Background="{DynamicResource ThemeHoverBrush}"
                            CornerRadius="50" Width="80" Height="80"
                            HorizontalAlignment="Center">
                        <PathIcon Data="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"
                                   Width="48" Height="48"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                    </Border>

                    <TextBlock x:Name="TitleText" Text="Vault Unlock Requested"
                               FontSize="{DynamicResource ThemeFontSizeXl}" FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource ThemeTextPrimaryBrush}"/>
                </StackPanel>
            </Border>

            <!-- Plugin context pill (shown when plugin identified) -->
            <Border x:Name="PluginContextBorder"
                    Background="{DynamicResource ThemeHoverBrush}"
                    CornerRadius="16" Padding="12,6"
                    HorizontalAlignment="Center"
                    IsVisible="False">
                <StackPanel Orientation="Horizontal" Spacing="8"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <controls:IconControl x:Name="PluginIcon" Size="16"
                                          Stroke="{DynamicResource ThemeTextSecondaryBrush}"
                                          VerticalAlignment="Center"/>
                    <TextBlock x:Name="PluginContextText"
                               FontSize="{DynamicResource ThemeFontSizeSmMd}"
                               Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Generic message (fallback when no plugin context) -->
            <TextBlock x:Name="MessageText"
                       FontSize="{DynamicResource ThemeFontSizeSmMd}"
                       Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                       TextAlignment="Center"
                       TextWrapping="Wrap"/>

            <!-- Password input -->
            <TextBox x:Name="PasswordBox"
                     PasswordChar="*"
                     Watermark="Master password"
                     FontSize="{DynamicResource ThemeFontSizeSmMd}"
                     Background="{DynamicResource ThemeHoverBrush}"
                     BorderBrush="{DynamicResource ThemePressedBrush}"
                     Padding="12,10"
                     CornerRadius="6"
                     KeyDown="OnPasswordKeyDown"/>

            <!-- Error section -->
            <Border x:Name="ErrorBorder"
                    Background="{DynamicResource ThemeDangerMutedBrush}" CornerRadius="6" Padding="12,8"
                    IsVisible="False">
                <TextBlock x:Name="ErrorText"
                           Foreground="{DynamicResource ThemeDangerBrush}"
                           FontSize="{DynamicResource ThemeFontSizeSm}"
                           TextAlignment="Center"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Action buttons (full-width stacked) -->
            <StackPanel Spacing="8">
                <Button x:Name="ConfirmButton" Content="Unlock" Click="OnConfirm"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Background="{DynamicResource ThemePrimaryBrush}"
                        Foreground="{DynamicResource ThemeTextOnAccentBrush}"
                        Padding="16,10" CornerRadius="6" FontWeight="SemiBold"/>
                <Button Content="Cancel" Click="OnCancel"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Background="{DynamicResource ThemeSurfaceElevatedBrush}"
                        Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                        Padding="16,10" CornerRadius="6"/>
            </StackPanel>

            <!-- Session info footer -->
            <TextBlock Text="Vault remains unlocked for this session"
                       FontSize="{DynamicResource ThemeFontSizeXsSm}"
                       Foreground="{DynamicResource ThemeTextMutedBrush}"
                       TextAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>
    </Border>
</Window>
