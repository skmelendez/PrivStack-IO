<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://PrivStack.Desktop/Styles/Themes/SharedTokens.axaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- PrivStack Sage Theme (Light) -->
    <!-- Earthy green tones with a calming sage accent -->

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- BACKGROUND COLORS                                                        -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Primary background - deepest layer -->
    <Color x:Key="ThemeBackground">#ECF0E8</Color>

    <!-- Surface - panels, cards, sidebars -->
    <Color x:Key="ThemeSurface">#F6F9F4</Color>

    <!-- Elevated surface - modals, dropdowns, popovers -->
    <Color x:Key="ThemeSurfaceElevated">#FFFFFF</Color>

    <!-- Glass surface - semi-transparent overlay panels -->
    <Color x:Key="ThemeSurfaceGlass">#D9F4F8F2</Color>
    <Color x:Key="ThemeSurfaceRecessed">#E2E8DE</Color>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- BORDER COLORS                                                            -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Primary border - dividers, outlines -->
    <Color x:Key="ThemeBorder">#C0CCB8</Color>

    <!-- Subtle border - low-contrast separators -->
    <Color x:Key="ThemeBorderSubtle">#D4DEC8</Color>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- TEXT COLORS                                                              -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Primary text - headings, body -->
    <Color x:Key="ThemeTextPrimary">#1A2E1A</Color>

    <!-- Secondary text - descriptions, labels -->
    <Color x:Key="ThemeTextSecondary">#465846</Color>

    <!-- Muted text - placeholders, hints, disabled -->
    <Color x:Key="ThemeTextMuted">#556850</Color>
    <Color x:Key="ThemeTextOnAccent">#FFFFFF</Color>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- PRIMARY ACCENT (SAGE GREEN)                                              -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Primary accent - buttons, links, focus states -->
    <Color x:Key="ThemePrimary">#5A8A58</Color>

    <!-- Primary hover - darker for hover states -->
    <Color x:Key="ThemePrimaryHover">#4A7848</Color>

    <!-- Primary muted - backgrounds, focus rings -->
    <Color x:Key="ThemePrimaryMuted">#265A8A58</Color>

    <!-- Primary glow - box shadows -->
    <Color x:Key="ThemePrimaryGlow">#335A8A58</Color>

    <!-- AVALONIA FLUENT ACCENT COLOR OVERRIDE -->
    <!-- Maps SystemAccentColor to this theme's primary so ALL built-in Fluent controls respect the theme -->
    <Color x:Key="SystemAccentColor">#5A8A58</Color>
    <Color x:Key="SystemAccentColorDark1">#4A7848</Color>
    <Color x:Key="SystemAccentColorDark2">#3A6638</Color>
    <Color x:Key="SystemAccentColorDark3">#2A5428</Color>
    <Color x:Key="SystemAccentColorLight1">#6E9C6C</Color>
    <Color x:Key="SystemAccentColorLight2">#82AE80</Color>
    <Color x:Key="SystemAccentColorLight3">#96C094</Color>
    <SolidColorBrush x:Key="SystemAccentColorBrush" Color="{StaticResource SystemAccentColor}"/>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- SECONDARY ACCENT (OLIVE)                                                 -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Secondary accent - secondary buttons, tags -->
    <Color x:Key="ThemeSecondary">#5F7A40</Color>

    <!-- Secondary hover - darker for hover states -->
    <Color x:Key="ThemeSecondaryHover">#4E6634</Color>

    <!-- Secondary muted - backgrounds -->
    <Color x:Key="ThemeSecondaryMuted">#265F7A40</Color>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- SEMANTIC COLORS                                                          -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Success - confirmations, positive actions -->
    <Color x:Key="ThemeSuccess">#2D8B4E</Color>
    <Color x:Key="ThemeSuccessMuted">#262D8B4E</Color>

    <!-- Warning - alerts, cautions -->
    <Color x:Key="ThemeWarning">#996815</Color>
    <Color x:Key="ThemeWarningMuted">#26996815</Color>

    <!-- Info - informational messages -->
    <Color x:Key="ThemeInfo">#3B7A9E</Color>
    <Color x:Key="ThemeInfoMuted">#263B7A9E</Color>

    <!-- Danger - errors, destructive actions -->
    <Color x:Key="ThemeDanger">#CC3333</Color>
    <Color x:Key="ThemeDangerMuted">#26CC3333</Color>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- INTERACTION STATES                                                       -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Hover - list items, buttons -->
    <Color x:Key="ThemeHover">#DAE4D4</Color>

    <!-- Selected - active items, selections -->
    <Color x:Key="ThemeSelected">#CCDCc6</Color>

    <!-- Pressed - pressed state -->
    <Color x:Key="ThemePressed">#C2D2BA</Color>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- SPECIAL COLORS                                                           -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Selection highlight (text selection) -->
    <Color x:Key="ThemeSelection">#405A8A58</Color>

    <!-- Scrollbar track -->
    <Color x:Key="ThemeScrollTrack">#EBF0E8</Color>

    <!-- Scrollbar thumb -->
    <Color x:Key="ThemeScrollThumb">#A8B8A0</Color>
    <Color x:Key="ThemeScrollThumbHover">#889880</Color>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- BRUSH RESOURCES                                                          -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="ThemeBackgroundBrush" Color="{StaticResource ThemeBackground}"/>
    <SolidColorBrush x:Key="ThemeSurfaceBrush" Color="{StaticResource ThemeSurface}"/>
    <SolidColorBrush x:Key="ThemeSurfaceElevatedBrush" Color="{StaticResource ThemeSurfaceElevated}"/>
    <SolidColorBrush x:Key="ThemeSurfaceGlassBrush" Color="{StaticResource ThemeSurfaceGlass}"/>
    <SolidColorBrush x:Key="ThemeSurfaceRecessedBrush" Color="{StaticResource ThemeSurfaceRecessed}"/>

    <!-- Border Brushes -->
    <SolidColorBrush x:Key="ThemeBorderBrush" Color="{StaticResource ThemeBorder}"/>
    <SolidColorBrush x:Key="ThemeBorderSubtleBrush" Color="{StaticResource ThemeBorderSubtle}"/>

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="ThemeTextPrimaryBrush" Color="{StaticResource ThemeTextPrimary}"/>
    <SolidColorBrush x:Key="ThemeTextSecondaryBrush" Color="{StaticResource ThemeTextSecondary}"/>
    <SolidColorBrush x:Key="ThemeTextMutedBrush" Color="{StaticResource ThemeTextMuted}"/>
    <SolidColorBrush x:Key="ThemeTextOnAccentBrush" Color="{StaticResource ThemeTextOnAccent}"/>

    <!-- Primary Accent Brushes -->
    <SolidColorBrush x:Key="ThemePrimaryBrush" Color="{StaticResource ThemePrimary}"/>
    <SolidColorBrush x:Key="ThemeLinkBrush" Color="{StaticResource ThemePrimary}"/>
    <SolidColorBrush x:Key="ThemePrimaryHoverBrush" Color="{StaticResource ThemePrimaryHover}"/>
    <SolidColorBrush x:Key="ThemePrimaryMutedBrush" Color="{StaticResource ThemePrimaryMuted}"/>

    <!-- Secondary Accent Brushes -->
    <SolidColorBrush x:Key="ThemeSecondaryBrush" Color="{StaticResource ThemeSecondary}"/>
    <SolidColorBrush x:Key="ThemeSecondaryHoverBrush" Color="{StaticResource ThemeSecondaryHover}"/>
    <SolidColorBrush x:Key="ThemeSecondaryMutedBrush" Color="{StaticResource ThemeSecondaryMuted}"/>

    <!-- Semantic Brushes -->
    <SolidColorBrush x:Key="ThemeSuccessBrush" Color="{StaticResource ThemeSuccess}"/>
    <SolidColorBrush x:Key="ThemeSuccessMutedBrush" Color="{StaticResource ThemeSuccessMuted}"/>
    <SolidColorBrush x:Key="ThemeWarningBrush" Color="{StaticResource ThemeWarning}"/>
    <SolidColorBrush x:Key="ThemeWarningMutedBrush" Color="{StaticResource ThemeWarningMuted}"/>
    <SolidColorBrush x:Key="ThemeInfoBrush" Color="{StaticResource ThemeInfo}"/>
    <SolidColorBrush x:Key="ThemeInfoMutedBrush" Color="{StaticResource ThemeInfoMuted}"/>
    <SolidColorBrush x:Key="ThemeDangerBrush" Color="{StaticResource ThemeDanger}"/>
    <SolidColorBrush x:Key="ThemeDangerMutedBrush" Color="{StaticResource ThemeDangerMuted}"/>

    <!-- Interaction State Brushes -->
    <SolidColorBrush x:Key="ThemeHoverBrush" Color="{StaticResource ThemeHover}"/>
    <SolidColorBrush x:Key="ThemeSelectedBrush" Color="{StaticResource ThemeSelected}"/>
    <SolidColorBrush x:Key="ThemePressedBrush" Color="{StaticResource ThemePressed}"/>

    <!-- Navigation Sidebar (dark sidebar on light content) -->
    <Color x:Key="ThemeNavBackground">#1A2818</Color>
    <Color x:Key="ThemeNavBorder">#2A3C28</Color>
    <Color x:Key="ThemeNavBorderSubtle">#223220</Color>
    <Color x:Key="ThemeNavText">#7A9A74</Color>
    <Color x:Key="ThemeNavTextHover">#FFFFFF</Color>
    <Color x:Key="ThemeNavHover">#2A3C28</Color>
    <Color x:Key="ThemeNavSelected">#1E3520</Color>

    <SolidColorBrush x:Key="ThemeNavBackgroundBrush" Color="{StaticResource ThemeNavBackground}"/>
    <SolidColorBrush x:Key="ThemeNavBorderBrush" Color="{StaticResource ThemeNavBorder}"/>
    <SolidColorBrush x:Key="ThemeNavBorderSubtleBrush" Color="{StaticResource ThemeNavBorderSubtle}"/>
    <SolidColorBrush x:Key="ThemeNavTextBrush" Color="{StaticResource ThemeNavText}"/>
    <SolidColorBrush x:Key="ThemeNavTextHoverBrush" Color="{StaticResource ThemeNavTextHover}"/>
    <SolidColorBrush x:Key="ThemeNavHoverBrush" Color="{StaticResource ThemeNavHover}"/>
    <SolidColorBrush x:Key="ThemeNavSelectedBrush" Color="{StaticResource ThemeNavSelected}"/>

    <!-- Table Header Brush -->
    <SolidColorBrush x:Key="ThemeTableHeaderBrush" Color="{StaticResource ThemeHover}"/>
    <SolidColorBrush x:Key="ThemeTableStripeBrush" Color="{StaticResource ThemeHover}"/>
    <SolidColorBrush x:Key="ThemeTableSeparatorBrush" Color="{StaticResource ThemeBorderSubtle}"/>

    <!-- Table Color Theme Presets -->
    <SolidColorBrush x:Key="ThemeTableBlueHeaderBrush" Color="#1A3B5C8A"/>
    <SolidColorBrush x:Key="ThemeTableBlueStripeBrush" Color="#0D3B5C8A"/>
    <SolidColorBrush x:Key="ThemeTableGreenHeaderBrush" Color="#1A4CAF50"/>
    <SolidColorBrush x:Key="ThemeTableGreenStripeBrush" Color="#0D4CAF50"/>
    <SolidColorBrush x:Key="ThemeTablePurpleHeaderBrush" Color="#1A7B1FA2"/>
    <SolidColorBrush x:Key="ThemeTablePurpleStripeBrush" Color="#0D7B1FA2"/>
    <SolidColorBrush x:Key="ThemeTableOrangeHeaderBrush" Color="#1AFF9800"/>
    <SolidColorBrush x:Key="ThemeTableOrangeStripeBrush" Color="#0DFF9800"/>

    <!-- Code Block Brushes -->
    <SolidColorBrush x:Key="ThemeCodeBlockBrush" Color="{StaticResource ThemeBackground}"/>
    <SolidColorBrush x:Key="ThemeCodeBlockGutterBrush" Color="{StaticResource ThemeSurface}"/>

    <!-- Special Brushes -->
    <SolidColorBrush x:Key="ThemeSelectionBrush" Color="{StaticResource ThemeSelection}"/>
    <SolidColorBrush x:Key="ThemeScrollTrackBrush" Color="{StaticResource ThemeScrollTrack}"/>
    <SolidColorBrush x:Key="ThemeScrollThumbBrush" Color="{StaticResource ThemeScrollThumb}"/>
    <SolidColorBrush x:Key="ThemeScrollThumbHoverBrush" Color="{StaticResource ThemeScrollThumbHover}"/>

    <!-- Graph Node Type Brushes -->
    <SolidColorBrush x:Key="ThemeNodeTagBrush" Color="#718096"/>
    <SolidColorBrush x:Key="ThemeNodeCompanyBrush" Color="#DD6B20"/>
    <SolidColorBrush x:Key="ThemeNodeContactGroupBrush" Color="#7B2FC0"/>
    <SolidColorBrush x:Key="ThemeNodeSnippetBrush" Color="#0E7490"/>
    <SolidColorBrush x:Key="ThemeNodeRssBrush" Color="#C05621"/>
    <SolidColorBrush x:Key="ThemeNodeProjectBrush" Color="#4D7C0F"/>
    <SolidColorBrush x:Key="ThemeNodeDealBrush" Color="#B45309"/>
    <SolidColorBrush x:Key="ThemeNodeTransactionBrush" Color="#BE185D"/>
    <SolidColorBrush x:Key="ThemeNodeCredentialBrush" Color="#B91C1C"/>
    <SolidColorBrush x:Key="ThemeNodeFileBrush" Color="#475569"/>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- BADGE, OVERLAY & SPECIAL PURPOSE COLORS                                -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Stage badges -->
    <Color x:Key="ThemeAlphaBadge">#E53935</Color>
    <Color x:Key="ThemeBetaBadge">#FB8C00</Color>
    <SolidColorBrush x:Key="ThemeAlphaBadgeBrush" Color="{StaticResource ThemeAlphaBadge}"/>
    <SolidColorBrush x:Key="ThemeBetaBadgeBrush" Color="{StaticResource ThemeBetaBadge}"/>

    <!-- Modal backdrops -->
    <Color x:Key="ThemeModalBackdrop">#80000000</Color>
    <Color x:Key="ThemeModalBackdropHeavy">#CC000000</Color>
    <SolidColorBrush x:Key="ThemeModalBackdropBrush" Color="{StaticResource ThemeModalBackdrop}"/>
    <SolidColorBrush x:Key="ThemeModalBackdropHeavyBrush" Color="{StaticResource ThemeModalBackdropHeavy}"/>

    <!-- Brand colors -->
    <Color x:Key="ThemeGoogleBrand">#4285F4</Color>
    <Color x:Key="ThemeICloudBrand">#3693F3</Color>
    <SolidColorBrush x:Key="ThemeGoogleBrandBrush" Color="{StaticResource ThemeGoogleBrand}"/>
    <SolidColorBrush x:Key="ThemeICloudBrandBrush" Color="{StaticResource ThemeICloudBrand}"/>

    <!-- Note highlight colors -->
    <Color x:Key="ThemeHighlightYellow">#FFF293</Color>
    <Color x:Key="ThemeHighlightBlue">#99CCFF</Color>
    <Color x:Key="ThemeHighlightGreen">#99E6B3</Color>
    <Color x:Key="ThemeHighlightPink">#FFB3CC</Color>
    <Color x:Key="ThemeHighlightPurple">#CCB3FF</Color>
    <Color x:Key="ThemeHighlightOrange">#FFCC99</Color>
    <SolidColorBrush x:Key="ThemeHighlightYellowBrush" Color="{StaticResource ThemeHighlightYellow}"/>
    <SolidColorBrush x:Key="ThemeHighlightBlueBrush" Color="{StaticResource ThemeHighlightBlue}"/>
    <SolidColorBrush x:Key="ThemeHighlightGreenBrush" Color="{StaticResource ThemeHighlightGreen}"/>
    <SolidColorBrush x:Key="ThemeHighlightPinkBrush" Color="{StaticResource ThemeHighlightPink}"/>
    <SolidColorBrush x:Key="ThemeHighlightPurpleBrush" Color="{StaticResource ThemeHighlightPurple}"/>
    <SolidColorBrush x:Key="ThemeHighlightOrangeBrush" Color="{StaticResource ThemeHighlightOrange}"/>

    <!-- Calendar event colors -->
    <Color x:Key="ThemeCalendarEvent">#2E6EB5</Color>
    <Color x:Key="ThemeCalendarEventMuted">#802E6EB5</Color>
    <SolidColorBrush x:Key="ThemeCalendarEventBrush" Color="{StaticResource ThemeCalendarEvent}"/>
    <SolidColorBrush x:Key="ThemeCalendarEventMutedBrush" Color="{StaticResource ThemeCalendarEventMuted}"/>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- GRADIENT BRUSHES (design system v1.38.0)                                 -->
    <!-- Layout constants are in SharedTokens.axaml (via MergedDictionaries).     -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Sidebar gradient: subtle top→bottom depth on dark green nav panel -->
    <LinearGradientBrush x:Key="ThemeNavGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource ThemeNavBackground}" Offset="0"/>
        <GradientStop Color="#121F10" Offset="1"/>
    </LinearGradientBrush>

    <!-- Active nav left accent bar: primary → secondary vertical gradient -->
    <LinearGradientBrush x:Key="ThemeNavAccentBarBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource ThemePrimary}" Offset="0"/>
        <GradientStop Color="{StaticResource ThemeSecondary}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Accent button gradient: adds tactile top-light depth -->
    <LinearGradientBrush x:Key="ThemePrimaryGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource ThemePrimary}" Offset="0"/>
        <GradientStop Color="{StaticResource ThemePrimaryHover}" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
