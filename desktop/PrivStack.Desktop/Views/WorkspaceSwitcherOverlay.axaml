<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PrivStack.Desktop.ViewModels"
             xmlns:controls="using:PrivStack.Desktop.Controls"
             xmlns:models="using:PrivStack.Desktop.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="PrivStack.Desktop.Views.WorkspaceSwitcherOverlay"
             x:DataType="vm:WorkspaceSwitcherViewModel"
             IsVisible="{Binding IsOpen}">

    <UserControl.Styles>
        <Style Selector="Button.ws-item">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4,2"/>
        </Style>
        <Style Selector="Button.ws-item:pointerover">
            <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
        </Style>
        <Style Selector="Button.ws-delete">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="0.5"/>
        </Style>
        <Style Selector="Button.ws-delete:pointerover">
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource ThemeDangerBrush}"/>
        </Style>
        <!-- Plugin picker card -->
        <Style Selector="Border.plugin-card">
            <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderBrush}"/>
        </Style>
    </UserControl.Styles>

    <!-- Full-screen backdrop -->
    <Panel>
        <Border Classes="modal-backdrop"
                PointerPressed="OnBackdropPressed"/>

        <!-- Centered palette -->
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,80,0,0"
                Width="480"
                MaxHeight="500"
                Background="{DynamicResource ThemeSurfaceBrush}"
                BorderBrush="{DynamicResource ThemeBorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Classes="modal"
                ClipToBounds="True"
                IsVisible="{Binding IsShowingWorkspaceList}">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Search bar -->
                <Border Grid.Row="0" Padding="16,12"
                        BorderBrush="{DynamicResource ThemeBorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid ColumnDefinitions="Auto,*">
                        <controls:IconControl Grid.Column="0" Icon="Search" Size="18" StrokeThickness="1.5"
                                              Stroke="{DynamicResource ThemeTextMutedBrush}"
                                              VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBox Grid.Column="1" x:Name="SearchBox"
                                 Text="{Binding SearchQuery, Mode=TwoWay}"
                                 Watermark="Search workspaces..."
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="0,6"
                                 VerticalContentAlignment="Center"
                                 Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                 FontSize="{DynamicResource ThemeFontSizeMd}"/>
                    </Grid>
                </Border>

                <!-- Workspace list -->
                <ScrollViewer Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding FilteredWorkspaces}" Margin="8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:WorkspaceItem">
                                <Panel>
                                    <!-- Normal state -->
                                    <Button Classes="ws-item"
                                            IsVisible="{Binding !IsConfirmingDelete}"
                                            Command="{Binding $parent[UserControl].((vm:WorkspaceSwitcherViewModel)DataContext).SwitchWorkspaceCommand}"
                                            CommandParameter="{Binding Id}">
                                        <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                            <!-- Active indicator -->
                                            <controls:IconControl Grid.Column="0"
                                                                  Icon="Check" Size="16" StrokeThickness="2"
                                                                  Stroke="{DynamicResource ThemeSuccessBrush}"
                                                                  IsVisible="{Binding IsActive}"
                                                                  VerticalAlignment="Center"
                                                                  Margin="0,0,12,0"/>
                                            <Border Grid.Column="0" Width="16" Margin="0,0,12,0"
                                                    IsVisible="{Binding !IsActive}"/>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}"
                                                           Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                                           FontSize="{DynamicResource ThemeFontSizeMd}"
                                                           VerticalAlignment="Center"/>
                                                <Border Background="{DynamicResource ThemeSurfaceElevatedBrush}"
                                                        CornerRadius="4" Padding="6,2"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding StorageLabel}"
                                                               FontSize="{DynamicResource ThemeFontSizeXs}"
                                                               Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                                                </Border>
                                            </StackPanel>

                                            <!-- Delete button (hidden for active) -->
                                            <Button Grid.Column="3" Classes="ws-delete"
                                                    IsVisible="{Binding !IsActive}"
                                                    Command="{Binding $parent[UserControl].((vm:WorkspaceSwitcherViewModel)DataContext).ConfirmDeleteCommand}"
                                                    CommandParameter="{Binding}">
                                                <controls:IconControl Icon="X" Size="14" StrokeThickness="1.5"
                                                                      Stroke="{DynamicResource ThemeTextMutedBrush}"/>
                                            </Button>
                                        </Grid>
                                    </Button>

                                    <!-- Delete confirmation state -->
                                    <Border IsVisible="{Binding IsConfirmingDelete}"
                                            Background="{DynamicResource ThemeSurfaceElevatedBrush}"
                                            CornerRadius="6" Padding="16,12">
                                        <Grid ColumnDefinitions="*,Auto,Auto">
                                            <TextBlock Grid.Column="0"
                                                       Foreground="{DynamicResource ThemeDangerBrush}"
                                                       FontSize="{DynamicResource ThemeFontSizeSm}"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="Delete '{0}'?">
                                                        <Binding Path="Name"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <Button Grid.Column="1" Content="Delete"
                                                    Background="{DynamicResource ThemeDangerBrush}"
                                                    Foreground="White"
                                                    Padding="12,6" CornerRadius="4" Margin="8,0,4,0"
                                                    FontSize="{DynamicResource ThemeFontSizeSm}"
                                                    Command="{Binding $parent[UserControl].((vm:WorkspaceSwitcherViewModel)DataContext).DeleteWorkspaceCommand}"
                                                    CommandParameter="{Binding}"/>
                                            <Button Grid.Column="2" Content="Cancel"
                                                    Background="{DynamicResource ThemeSurfaceBrush}"
                                                    Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                                    Padding="12,6" CornerRadius="4"
                                                    FontSize="{DynamicResource ThemeFontSizeSm}"
                                                    Command="{Binding $parent[UserControl].((vm:WorkspaceSwitcherViewModel)DataContext).CancelDeleteCommand}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </Panel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Footer: Create new workspace -->
                <Border Grid.Row="2" Padding="12"
                        BorderBrush="{DynamicResource ThemeBorderBrush}"
                        BorderThickness="0,1,0,0">
                    <Panel>
                        <!-- Create button -->
                        <Button IsVisible="{Binding !IsCreating}"
                                Command="{Binding StartCreatingCommand}"
                                Background="Transparent"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Padding="12,10" CornerRadius="6"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <controls:IconControl Icon="Plus" Size="16" StrokeThickness="1.5"
                                                      Stroke="{DynamicResource ThemePrimaryBrush}"/>
                                <TextBlock Text="Create New Workspace"
                                           Foreground="{DynamicResource ThemePrimaryBrush}"
                                           FontSize="{DynamicResource ThemeFontSizeSmMd}"/>
                            </StackPanel>
                        </Button>

                        <!-- Inline create form -->
                        <Grid IsVisible="{Binding IsCreating}"
                              ColumnDefinitions="*,Auto,Auto">
                            <TextBox Grid.Column="0" x:Name="NewWorkspaceNameBox"
                                     Text="{Binding NewWorkspaceName, Mode=TwoWay}"
                                     Watermark="Workspace name..."
                                     Background="{DynamicResource ThemeSurfaceElevatedBrush}"
                                     Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                     BorderThickness="0" Padding="12,8" CornerRadius="6"/>
                            <Button Grid.Column="1" Content="Create"
                                    Command="{Binding CreateWorkspaceCommand}"
                                    Background="{DynamicResource ThemePrimaryBrush}"
                                    Foreground="White"
                                    Padding="16,8" CornerRadius="6" Margin="8,0,4,0"
                                    FontSize="{DynamicResource ThemeFontSizeSm}"/>
                            <Button Grid.Column="2" Content="Cancel"
                                    Command="{Binding CancelCreatingCommand}"
                                    Background="{DynamicResource ThemeSurfaceElevatedBrush}"
                                    Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                    Padding="16,8" CornerRadius="6"
                                    FontSize="{DynamicResource ThemeFontSizeSm}"/>
                        </Grid>
                    </Panel>
                </Border>
            </Grid>
        </Border>

        <!-- ==================== STORAGE LOCATION PICKER STEP ==================== -->
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,80,0,0"
                Width="480"
                Background="{DynamicResource ThemeSurfaceBrush}"
                BorderBrush="{DynamicResource ThemeBorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Classes="modal"
                ClipToBounds="True"
                IsVisible="{Binding IsSelectingStorageLocation}">
            <StackPanel>
                <!-- Header -->
                <Border Padding="24,20,24,16"
                        BorderBrush="{DynamicResource ThemeBorderBrush}"
                        BorderThickness="0,0,0,1">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Choose storage location"
                                   FontSize="{DynamicResource ThemeFontSizeLg}"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource ThemeTextPrimaryBrush}"/>
                        <TextBlock Text="Where should this workspace store its data?"
                                   FontSize="{DynamicResource ThemeFontSizeXs}"
                                   Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Storage options -->
                <StackPanel Margin="16" Spacing="4">
                    <!-- Default -->
                    <Button Classes="ws-item"
                            Command="{Binding SelectStorageLocationTypeCommand}"
                            CommandParameter="{x:Static models:DataDirectoryType.Default}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <controls:IconControl Grid.Column="0" Icon="HardDrive" Size="18"
                                                  Stroke="{DynamicResource ThemeTextMutedBrush}"
                                                  VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Default (Local)"
                                           Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                           FontSize="{DynamicResource ThemeFontSizeSm}"/>
                                <TextBlock Text="Store on this device"
                                           FontSize="{DynamicResource ThemeFontSizeXs}"
                                           Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                            </StackPanel>
                            <controls:IconControl Grid.Column="2" Icon="Check" Size="16" StrokeThickness="2"
                                                  Stroke="{DynamicResource ThemePrimaryBrush}"
                                                  VerticalAlignment="Center">
                                <controls:IconControl.IsVisible>
                                    <Binding Path="SelectedDirectoryType"
                                             Converter="{x:Static ObjectConverters.Equal}"
                                             ConverterParameter="{x:Static models:DataDirectoryType.Default}"/>
                                </controls:IconControl.IsVisible>
                            </controls:IconControl>
                        </Grid>
                    </Button>

                    <!-- Google Drive -->
                    <Button Classes="ws-item"
                            IsEnabled="{Binding IsGoogleDriveAvailable}"
                            Command="{Binding SelectStorageLocationTypeCommand}"
                            CommandParameter="{x:Static models:DataDirectoryType.GoogleDrive}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <controls:IconControl Grid.Column="0" Icon="Cloud" Size="18"
                                                  Stroke="{DynamicResource ThemeTextMutedBrush}"
                                                  VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Google Drive"
                                           Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                           FontSize="{DynamicResource ThemeFontSizeSm}"/>
                                <TextBlock Text="Sync across devices via Google Drive"
                                           FontSize="{DynamicResource ThemeFontSizeXs}"
                                           Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                            </StackPanel>
                            <controls:IconControl Grid.Column="2" Icon="Check" Size="16" StrokeThickness="2"
                                                  Stroke="{DynamicResource ThemePrimaryBrush}"
                                                  VerticalAlignment="Center">
                                <controls:IconControl.IsVisible>
                                    <Binding Path="SelectedDirectoryType"
                                             Converter="{x:Static ObjectConverters.Equal}"
                                             ConverterParameter="{x:Static models:DataDirectoryType.GoogleDrive}"/>
                                </controls:IconControl.IsVisible>
                            </controls:IconControl>
                        </Grid>
                    </Button>

                    <!-- iCloud -->
                    <Button Classes="ws-item"
                            IsEnabled="{Binding IsICloudAvailable}"
                            Command="{Binding SelectStorageLocationTypeCommand}"
                            CommandParameter="{x:Static models:DataDirectoryType.ICloud}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <controls:IconControl Grid.Column="0" Icon="Cloud" Size="18"
                                                  Stroke="{DynamicResource ThemeTextMutedBrush}"
                                                  VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="iCloud Drive"
                                           Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                           FontSize="{DynamicResource ThemeFontSizeSm}"/>
                                <TextBlock Text="Sync across Apple devices"
                                           FontSize="{DynamicResource ThemeFontSizeXs}"
                                           Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                            </StackPanel>
                            <controls:IconControl Grid.Column="2" Icon="Check" Size="16" StrokeThickness="2"
                                                  Stroke="{DynamicResource ThemePrimaryBrush}"
                                                  VerticalAlignment="Center">
                                <controls:IconControl.IsVisible>
                                    <Binding Path="SelectedDirectoryType"
                                             Converter="{x:Static ObjectConverters.Equal}"
                                             ConverterParameter="{x:Static models:DataDirectoryType.ICloud}"/>
                                </controls:IconControl.IsVisible>
                            </controls:IconControl>
                        </Grid>
                    </Button>

                    <!-- PrivStack Cloud -->
                    <Button Classes="ws-item"
                            IsEnabled="{Binding IsCloudSyncAvailable}"
                            Command="{Binding SelectCloudSyncCommand}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <controls:IconControl Grid.Column="0" Icon="Cloud" Size="18"
                                                  Stroke="{DynamicResource ThemePrimaryBrush}"
                                                  VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="PrivStack Cloud"
                                           Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                           FontSize="{DynamicResource ThemeFontSizeSm}"/>
                                <TextBlock Text="End-to-end encrypted cloud sync"
                                           FontSize="{DynamicResource ThemeFontSizeXs}"
                                           Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                            </StackPanel>
                            <controls:IconControl Grid.Column="2" Icon="Check" Size="16" StrokeThickness="2"
                                                  Stroke="{DynamicResource ThemePrimaryBrush}"
                                                  VerticalAlignment="Center">
                                <controls:IconControl.IsVisible>
                                    <Binding Path="SelectedSyncTier"
                                             Converter="{x:Static ObjectConverters.Equal}"
                                             ConverterParameter="{x:Static models:SyncTier.PrivStackCloud}"/>
                                </controls:IconControl.IsVisible>
                            </controls:IconControl>
                        </Grid>
                    </Button>

                    <!-- Custom -->
                    <Button Classes="ws-item"
                            Command="{Binding SelectStorageLocationTypeCommand}"
                            CommandParameter="{x:Static models:DataDirectoryType.Custom}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <controls:IconControl Grid.Column="0" Icon="Folder" Size="18"
                                                  Stroke="{DynamicResource ThemeTextMutedBrush}"
                                                  VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Custom Location"
                                           Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                           FontSize="{DynamicResource ThemeFontSizeSm}"/>
                                <TextBlock Text="Choose a specific folder (NAS, external drive, etc.)"
                                           FontSize="{DynamicResource ThemeFontSizeXs}"
                                           Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                            </StackPanel>
                            <controls:IconControl Grid.Column="2" Icon="Check" Size="16" StrokeThickness="2"
                                                  Stroke="{DynamicResource ThemePrimaryBrush}"
                                                  VerticalAlignment="Center">
                                <controls:IconControl.IsVisible>
                                    <Binding Path="SelectedDirectoryType"
                                             Converter="{x:Static ObjectConverters.Equal}"
                                             ConverterParameter="{x:Static models:DataDirectoryType.Custom}"/>
                                </controls:IconControl.IsVisible>
                            </controls:IconControl>
                        </Grid>
                    </Button>

                    <!-- Custom path display -->
                    <Border IsVisible="{Binding IsCustomDirectorySelected}"
                            Background="{DynamicResource ThemeSurfaceElevatedBrush}"
                            CornerRadius="6" Padding="12,8" Margin="0,4,0,0">
                        <TextBlock Text="{Binding DataDirectoryDisplay}"
                                   FontSize="{DynamicResource ThemeFontSizeXs}"
                                   Foreground="{DynamicResource ThemeTextMutedBrush}"
                                   TextTrimming="CharacterEllipsis"/>
                    </Border>
                </StackPanel>

                <!-- Footer -->
                <Border Padding="16,12"
                        BorderBrush="{DynamicResource ThemeBorderBrush}"
                        BorderThickness="0,1,0,0">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Button Grid.Column="0"
                                Command="{Binding CancelStorageLocationCommand}"
                                Background="Transparent"
                                Foreground="{DynamicResource ThemeTextMutedBrush}"
                                Padding="12,8" CornerRadius="6"
                                FontSize="{DynamicResource ThemeFontSizeSm}"
                                Cursor="Hand"
                                Content="Back"/>
                        <Button Grid.Column="2"
                                Command="{Binding ConfirmStorageLocationCommand}"
                                Background="{DynamicResource ThemePrimaryBrush}"
                                Foreground="{DynamicResource ThemeTextOnAccentBrush}"
                                Padding="20,10" CornerRadius="6"
                                FontSize="{DynamicResource ThemeFontSizeSmMd}"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Content="Continue"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>

        <!-- ==================== PLUGIN PICKER STEP ==================== -->
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,60,0,0"
                Width="560"
                MaxHeight="600"
                Background="{DynamicResource ThemeSurfaceBrush}"
                BorderBrush="{DynamicResource ThemeBorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Classes="modal"
                ClipToBounds="True"
                IsVisible="{Binding IsSelectingPlugins}">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header -->
                <Border Grid.Row="0" Padding="24,20,24,16"
                        BorderBrush="{DynamicResource ThemeBorderBrush}"
                        BorderThickness="0,0,0,1">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Choose plugins for this workspace"
                                   FontSize="{DynamicResource ThemeFontSizeLg}"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource ThemeTextPrimaryBrush}"/>
                        <TextBlock Text="You can change these anytime from the Dashboard"
                                   FontSize="{DynamicResource ThemeFontSizeXs}"
                                   Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Plugin list -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding AvailablePlugins}" Margin="16">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Spacing="4"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:PluginPickerItem">
                                <Border Classes="plugin-card">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <Border Grid.Column="0" Width="32" Height="32"
                                                Background="{DynamicResource ThemeSurfaceBrush}"
                                                CornerRadius="6" Margin="0,0,10,0"
                                                VerticalAlignment="Center">
                                            <controls:IconControl Icon="{Binding Icon}"
                                                                  Size="16"
                                                                  Stroke="{DynamicResource ThemeTextMutedBrush}"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                            <TextBlock Text="{Binding Name}"
                                                       FontWeight="SemiBold"
                                                       FontSize="{DynamicResource ThemeFontSizeSm}"
                                                       Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Description}"
                                                       FontSize="{DynamicResource ThemeFontSizeXs}"
                                                       Foreground="{DynamicResource ThemeTextMutedBrush}"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxLines="1"/>
                                        </StackPanel>
                                        <ToggleSwitch Grid.Column="2"
                                                      IsChecked="{Binding IsSelected}"
                                                      VerticalAlignment="Center"
                                                      Margin="8,0,0,0"
                                                      OnContent="" OffContent=""/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Footer -->
                <Border Grid.Row="2" Padding="16,12"
                        BorderBrush="{DynamicResource ThemeBorderBrush}"
                        BorderThickness="0,1,0,0">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Button Grid.Column="0"
                                Command="{Binding SkipPluginSelectionCommand}"
                                Background="Transparent"
                                Foreground="{DynamicResource ThemeTextMutedBrush}"
                                Padding="12,8" CornerRadius="6"
                                FontSize="{DynamicResource ThemeFontSizeSm}"
                                Cursor="Hand"
                                Content="Skip"/>
                        <Button Grid.Column="2"
                                Command="{Binding ConfirmPluginSelectionCommand}"
                                Background="{DynamicResource ThemePrimaryBrush}"
                                Foreground="{DynamicResource ThemeTextOnAccentBrush}"
                                Padding="20,10" CornerRadius="6"
                                FontSize="{DynamicResource ThemeFontSizeSmMd}"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Content="Get Started"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Panel>
</UserControl>
