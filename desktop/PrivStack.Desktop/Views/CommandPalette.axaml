<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PrivStack.Desktop.ViewModels"
             xmlns:controls="using:PrivStack.Desktop.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
             x:Class="PrivStack.Desktop.Views.CommandPalette"
             x:DataType="vm:CommandPaletteViewModel"
             IsVisible="{Binding IsOpen}">

    <!-- Overlay Background -->
    <Grid>
        <!-- Backdrop (click to close) -->
        <Border Classes="modal-backdrop" PointerPressed="OnBackdropPressed"/>

        <!-- Palette Container -->
        <Border Background="{DynamicResource ThemeBorderBrush}" CornerRadius="12"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="0,80,0,0" Width="500"
                Classes="modal">
            <Grid RowDefinitions="Auto,Auto,Auto,*">
                <!-- Palette Title (visible in PluginPalette mode) -->
                <TextBlock Grid.Row="0"
                           Text="{Binding PaletteTitle}"
                           IsVisible="{Binding PaletteTitle, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                           FontSize="{DynamicResource ThemeFontSizeXsSm}"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ThemeTextMutedBrush}"
                           Margin="16,12,16,0"/>

                <!-- Search Input with optional plugin filter pill -->
                <Border Grid.Row="1" Background="{DynamicResource ThemeSurfaceElevatedBrush}" CornerRadius="8" Margin="12,12,12,0" Padding="4">
                    <DockPanel>
                        <!-- Plugin filter pill (visible when a scope filter is active) -->
                        <Border DockPanel.Dock="Left"
                                IsVisible="{Binding HasPluginFilter}"
                                Background="{DynamicResource ThemePrimaryMutedBrush}"
                                CornerRadius="6" Padding="8,4" Margin="4,0,4,0"
                                VerticalAlignment="Center"
                                Cursor="Hand"
                                PointerPressed="OnFilterPillPressed">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="{Binding FilterPluginDisplayName}"
                                           FontSize="{DynamicResource ThemeFontSizeSm}"
                                           Foreground="{DynamicResource ThemePrimaryBrush}"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="âœ•" FontSize="{DynamicResource ThemeFontSizeXs}"
                                           Foreground="{DynamicResource ThemeTextMutedBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <!-- Search TextBox -->
                        <TextBox Text="{Binding SearchQuery}"
                                 Watermark="{Binding PalettePlaceholder}"
                                 Background="Transparent" Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                 BorderThickness="0" Padding="12,10"
                                 FontSize="{DynamicResource ThemeFontSizeMd}"
                                 CaretBrush="{DynamicResource ThemeTextPrimaryBrush}"
                                 Name="SearchBox"/>
                    </DockPanel>
                </Border>

                <!-- Hint -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right"
                            Margin="12,8,12,0" Spacing="8">
                    <TextBlock Text="up/down navigate" FontSize="{DynamicResource ThemeFontSizeXs}" Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                    <TextBlock Text="enter select" FontSize="{DynamicResource ThemeFontSizeXs}" Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                    <TextBlock Text="esc close" FontSize="{DynamicResource ThemeFontSizeXs}" Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                </StackPanel>

                <!-- Command List -->
                <ListBox Grid.Row="3"
                         ItemsSource="{Binding FilteredCommands}"
                         SelectedItem="{Binding SelectedCommand}"
                         Background="Transparent" BorderThickness="0"
                         Margin="8,8,8,12"
                         MaxHeight="300"
                         Name="CommandList"
                         DoubleTapped="OnItemDoubleTapped"
                         Tapped="OnItemTapped">
                    <ListBox.Styles>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0,2"/>
                        </Style>
                        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                            <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
                        </Style>
                    </ListBox.Styles>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="12,10" CornerRadius="6" Background="Transparent">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <!-- Plugin icon for linkable items and scope filters -->
                                    <controls:IconControl Grid.Column="0"
                                                          Icon="{Binding Icon}"
                                                          Size="18" StrokeThickness="1.5"
                                                          Stroke="{DynamicResource ThemeTextMutedBrush}"
                                                          IsVisible="{Binding ShowIcon}"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,10,0"/>
                                    <StackPanel Grid.Column="1">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <TextBlock Text="{Binding Name}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                                       FontSize="{DynamicResource ThemeFontSizeSmMd}"/>
                                            <!-- Type badge for linkable item results -->
                                            <Border IsVisible="{Binding IsLinkableItem}"
                                                    Background="{DynamicResource ThemeHoverBrush}"
                                                    CornerRadius="4" Padding="6,2">
                                                <TextBlock Text="{Binding LinkType}"
                                                           FontSize="{DynamicResource ThemeFontSizeXs}"
                                                           Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Description}"
                                                   FontSize="{DynamicResource ThemeFontSizeXsSm}" Foreground="{DynamicResource ThemeTextMutedBrush}"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" Text="{Binding Category}"
                                               FontSize="{DynamicResource ThemeFontSizeXs}"
                                               Foreground="{DynamicResource ThemeTextMutedBrush}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Empty State -->
                <StackPanel Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center"
                            IsVisible="{Binding !FilteredCommands.Count}" Margin="0,20">
                    <TextBlock Text="No commands found" FontSize="{DynamicResource ThemeFontSizeSmMd}" Foreground="{DynamicResource ThemeTextMutedBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Try a different search term"
                               FontSize="{DynamicResource ThemeFontSizeXsSm}" Foreground="{DynamicResource ThemeTextMutedBrush}"
                               HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
