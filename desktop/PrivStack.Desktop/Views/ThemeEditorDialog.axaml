<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PrivStack.Desktop.ViewModels"
             xmlns:views="using:PrivStack.Desktop.Views"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="PrivStack.Desktop.Views.ThemeEditorDialog"
             x:DataType="vm:ThemeEditorViewModel"
             IsVisible="{Binding IsOpen}">

    <Panel>
        <!-- Semi-transparent backdrop -->
        <Border Classes="modal-backdrop"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                PointerPressed="OnBackdropPressed"/>

        <!-- Dialog Container -->
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="900" MaxHeight="700"
                Background="{DynamicResource ThemeSurfaceElevatedBrush}"
                BorderBrush="{DynamicResource ThemeBorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Classes="modal"
                ClipToBounds="True">

            <Grid RowDefinitions="Auto,*">
                <!-- Header -->
                <Border Grid.Row="0" Padding="20,16"
                        BorderBrush="{DynamicResource ThemeBorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid ColumnDefinitions="*,Auto">
                        <!-- Left: Theme name + variant toggle -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12"
                                    VerticalAlignment="Center">
                            <TextBox Text="{Binding ThemeName}"
                                     Watermark="Theme Name"
                                     Width="200" Padding="8,6"
                                     FontSize="{DynamicResource ThemeFontSizeMd}"/>
                            <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                <TextBlock Text="Light" FontSize="{DynamicResource ThemeFontSizeXsSm}"
                                           Foreground="{DynamicResource ThemeTextMutedBrush}"
                                           VerticalAlignment="Center"/>
                                <ToggleSwitch IsChecked="{Binding IsLightVariant}"
                                              OnContent="" OffContent=""
                                              VerticalAlignment="Center" Margin="0,-2,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Right: Action buttons -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button Content="Reset"
                                    Command="{Binding ResetToDefaultCommand}"
                                    Padding="10,6"
                                    FontSize="{DynamicResource ThemeFontSizeXsSm}"
                                    ToolTip.Tip="Reset all colors to base theme defaults"/>
                            <Button Content="Delete"
                                    Command="{Binding DeleteCommand}"
                                    IsVisible="{Binding CanDelete}"
                                    Background="{DynamicResource ThemeDangerBrush}"
                                    Foreground="White"
                                    Padding="10,6"
                                    FontSize="{DynamicResource ThemeFontSizeXsSm}"/>
                            <Button Content="Cancel"
                                    Command="{Binding CancelCommand}"
                                    Padding="10,6"
                                    FontSize="{DynamicResource ThemeFontSizeXsSm}"/>
                            <Button Content="Save"
                                    Command="{Binding SaveCommand}"
                                    Background="{DynamicResource ThemePrimaryBrush}"
                                    Foreground="{DynamicResource ThemeTextOnAccentBrush}"
                                    Padding="14,6"
                                    FontSize="{DynamicResource ThemeFontSizeXsSm}"
                                    FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Body: Colors (left) + Preview (right) -->
                <Grid Grid.Row="1" ColumnDefinitions="*,*">

                    <!-- Left column: Color groups -->
                    <Border Grid.Column="0"
                            BorderBrush="{DynamicResource ThemeBorderBrush}"
                            BorderThickness="0,0,1,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Spacing="4" Margin="16,12,16,16">
                                <ItemsControl ItemsSource="{Binding ColorGroups}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:ThemeColorGroup">
                                            <StackPanel Spacing="2" Margin="0,0,0,12">
                                                <!-- Group header -->
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="{DynamicResource ThemeFontSizeXsSm}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource ThemeTextMutedBrush}"
                                                           Margin="0,0,0,6"/>

                                                <!-- Color items -->
                                                <ItemsControl ItemsSource="{Binding Items}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate x:DataType="vm:ThemeColorItem">
                                                            <Grid ColumnDefinitions="Auto,*,Auto,Auto"
                                                                  Margin="0,1" Height="30">
                                                                <!-- Color swatch button with flyout -->
                                                                <Button Grid.Column="0"
                                                                        Width="24" Height="24"
                                                                        Padding="0"
                                                                        CornerRadius="4"
                                                                        BorderBrush="{DynamicResource ThemeBorderBrush}"
                                                                        BorderThickness="1"
                                                                        VerticalAlignment="Center"
                                                                        Cursor="Hand">
                                                                    <Button.Background>
                                                                        <SolidColorBrush Color="{Binding Color}"/>
                                                                    </Button.Background>
                                                                    <Button.Styles>
                                                                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                                                                            <Setter Property="Background">
                                                                                <Setter.Value>
                                                                                    <SolidColorBrush Color="{Binding Color}"/>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </Button.Styles>
                                                                    <Button.Flyout>
                                                                        <Flyout Placement="RightEdgeAlignedTop">
                                                                            <Border Padding="8">
                                                                                <ColorView Color="{Binding Color}"
                                                                                           IsAlphaVisible="True"
                                                                                           IsColorSpectrumVisible="True"
                                                                                           IsColorComponentsVisible="True"
                                                                                           IsHexInputVisible="True"
                                                                                           IsColorPaletteVisible="False"/>
                                                                            </Border>
                                                                        </Flyout>
                                                                    </Button.Flyout>
                                                                </Button>

                                                                <!-- Display name -->
                                                                <TextBlock Grid.Column="1"
                                                                           Text="{Binding DisplayName}"
                                                                           FontSize="{DynamicResource ThemeFontSizeXsSm}"
                                                                           Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                                                                           VerticalAlignment="Center"
                                                                           Margin="8,0,0,0"/>

                                                                <!-- Hex input -->
                                                                <TextBox Grid.Column="2"
                                                                         Text="{Binding HexText}"
                                                                         Width="80"
                                                                         FontSize="{DynamicResource ThemeFontSizeXs}"
                                                                         FontFamily="{DynamicResource ThemeFontMono}"
                                                                         Padding="4,3"
                                                                         VerticalAlignment="Center"
                                                                         Margin="4,0"/>

                                                                <!-- Reset per-color -->
                                                                <Button Grid.Column="3"
                                                                        Command="{Binding ResetToDefaultCommand}"
                                                                        Background="Transparent"
                                                                        Padding="4,2"
                                                                        Cursor="Hand"
                                                                        VerticalAlignment="Center"
                                                                        ToolTip.Tip="Reset to default">
                                                                    <Button.Styles>
                                                                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                                                                            <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
                                                                        </Style>
                                                                    </Button.Styles>
                                                                    <TextBlock Text="â†º"
                                                                               FontSize="{DynamicResource ThemeFontSizeXsSm}"
                                                                               Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                                                                </Button>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- Right column: Live preview -->
                    <Grid Grid.Column="1">
                        <Border Background="{DynamicResource ThemeBackgroundBrush}">
                            <views:ThemePreviewPanel/>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Panel>
</UserControl>
