<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ae="using:AvaloniaEdit"
        xmlns:aeRendering="using:AvaloniaEdit.Rendering">

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- BUTTON STYLES                                                            -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Button">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusSm}"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
                <BrushTransition Property="Foreground" Duration="0:0:0.15"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
            </Transitions>
        </Setter>
    </Style>

    <!-- Force Fluent theme Button template to respect our Background in all states -->
    <Style Selector="Button /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{TemplateBinding Background}"/>
    </Style>
    <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{TemplateBinding Background}"/>
    </Style>
    <Style Selector="Button:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{TemplateBinding Background}"/>
    </Style>

    <Style Selector="Button:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
    </Style>

    <Style Selector="Button:pressed">
        <Setter Property="RenderTransform" Value="scale(0.98)"/>
        <Setter Property="Background" Value="{DynamicResource ThemeSelectedBrush}"/>
    </Style>

    <Style Selector="Button:disabled">
        <Setter Property="Opacity" Value="0.5"/>
    </Style>

    <!-- Primary/Accent button -->
    <Style Selector="Button.accent">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryGradientBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextOnAccentBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusLg}"/>
    </Style>

    <Style Selector="Button.accent:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryHoverBrush}"/>
    </Style>

    <Style Selector="Button.accent:pressed">
        <Setter Property="RenderTransform" Value="scale(0.97)"/>
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryHoverBrush}"/>
    </Style>

    <!-- Danger button -->
    <Style Selector="Button.danger">
        <Setter Property="Background" Value="{DynamicResource ThemeDangerBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextOnAccentBrush}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusLg}"/>
    </Style>

    <Style Selector="Button.danger:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeDangerMutedBrush}"/>
    </Style>

    <!-- Success button -->
    <Style Selector="Button.success">
        <Setter Property="Background" Value="{DynamicResource ThemeSuccessBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextOnAccentBrush}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusLg}"/>
    </Style>

    <Style Selector="Button.success:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeSuccessMutedBrush}"/>
    </Style>

    <!-- Ghost/Transparent button - starts transparent, gains subtle bg on hover -->
    <Style Selector="Button.ghost">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <Style Selector="Button.ghost:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
    </Style>

    <Style Selector="Button.ghost:pressed">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
    </Style>

    <!-- Secondary button -->
    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusSm}"/>
    </Style>

    <Style Selector="Button.secondary:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeTextMutedBrush}"/>
    </Style>

    <!-- Subtle button - for icon buttons and minimal UI -->
    <Style Selector="Button.subtle">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextMutedBrush}"/>
        <Setter Property="Padding" Value="6"/>
    </Style>

    <Style Selector="Button.subtle:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <Style Selector="Button.subtle:pressed">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
    </Style>

    <!-- Icon button: compact square button for toolbars and inline actions -->
    <Style Selector="Button.icon-button">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextMutedBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusSm}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style Selector="Button.icon-button:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <Style Selector="Button.icon-button:pressed">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
    </Style>

    <!-- Large icon button: 40×40 variant for primary toolbar actions -->
    <Style Selector="Button.icon-button-lg">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextMutedBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusSm}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style Selector="Button.icon-button-lg:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <Style Selector="Button.icon-button-lg:pressed">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- TEXTBOX STYLES                                                           -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="TextBox">
        <Setter Property="SelectionBrush" Value="{DynamicResource ThemeSelectionBrush}"/>
        <Setter Property="SelectionForegroundBrush" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
        <Setter Property="CaretBrush" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderBrush}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusSm}"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="TextBox:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource ThemePrimaryBrush}"/>
    </Style>

    <Style Selector="TextBox:pointerover">
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeHoverBrush}"/>
    </Style>

    <!-- Force Fluent theme TextBox template to respect our Background in all states -->
    <Style Selector="TextBox /template/ Border#PART_BorderElement">
        <Setter Property="Background" Value="{TemplateBinding Background}"/>
    </Style>
    <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
        <Setter Property="Background" Value="{TemplateBinding Background}"/>
    </Style>
    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
        <Setter Property="Background" Value="{TemplateBinding Background}"/>
    </Style>

    <Style Selector="TextBox /template/ TextBlock#PART_Watermark">
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextMutedBrush}"/>
    </Style>

    <!-- Code editor TextBox style (fallback when WebView unavailable) -->
    <Style Selector="TextBox.code-editor">
        <Setter Property="Background" Value="{DynamicResource ThemeBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontFamily" Value="{DynamicResource ThemeFontMono}"/>
        <Setter Property="FontSize" Value="{DynamicResource ThemeFontSizeSmMd}"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <Style Selector="TextBox.code-editor:readonly">
        <Setter Property="Background" Value="{DynamicResource ThemeBackgroundBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- LISTBOX STYLES                                                           -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="ListBox">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="ListBoxItem">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusSm}"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

    <!-- Force Fluent theme ListBoxItem template to respect our Background in all states -->
    <Style Selector="ListBoxItem /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{TemplateBinding Background}"/>
    </Style>
    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{TemplateBinding Background}"/>
    </Style>
    <Style Selector="ListBoxItem:selected /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{TemplateBinding Background}"/>
    </Style>

    <Style Selector="ListBoxItem:selected">
        <Setter Property="Background" Value="{DynamicResource ThemeSelectedBrush}"/>
    </Style>

    <Style Selector="ListBoxItem:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
    </Style>

    <!-- Sidebar ListBox - standardized for left sidebars -->
    <Style Selector="ListBox.sidebar">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="ListBox.sidebar ListBoxItem">
        <Setter Property="Padding" Value="2"/>
        <Setter Property="MinHeight" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusSm}"/>
    </Style>

    <!-- Compact sidebar list items -->
    <Style Selector="ListBox.sidebar-compact ListBoxItem">
        <Setter Property="Padding" Value="2"/>
        <Setter Property="MinHeight" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusXs}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- SCROLLVIEWER & SCROLLBAR STYLES                                          -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="ScrollViewer">
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    </Style>

    <!-- Overlay scrollbars: hidden by default, fade in on hover -->
    <Style Selector="ScrollViewer ScrollBar">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Opacity" Value="0"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="ScrollViewer:pointerover ScrollBar">
        <Setter Property="Opacity" Value="1"/>
    </Style>

    <Style Selector="ScrollBar /template/ Thumb">
        <Setter Property="Background" Value="{DynamicResource ThemeScrollThumbBrush}"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="ScrollBar /template/ Thumb:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeScrollThumbHoverBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- BORDER STYLES                                                            -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Hoverable border effect: subtle background + lift on hover -->
    <Style Selector="Border.hoverable">
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="CubicEaseOut"/>
                <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.hoverable:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
        <Setter Property="RenderTransform" Value="translateY(-2px)"/>
        <Setter Property="BoxShadow" Value="0 4 16 0 #20000000, 0 1 4 0 #10000000"/>
    </Style>

    <!-- Card: subtle shadow + border, lifts on hover -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusLg}"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BoxShadow" Value="0 1 3 0 #10000000, 0 0 1 0 #0C000000"/>
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="CubicEaseOut"/>
                <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.card:pointerover">
        <Setter Property="RenderTransform" Value="translateY(-2px)"/>
        <Setter Property="BoxShadow" Value="0 6 20 0 #22000000, 0 2 6 0 #14000000"/>
    </Style>

    <!-- Surface card: border + medium shadow -->
    <Style Selector="Border.surface-card">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusLg}"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BoxShadow" Value="0 2 8 0 #1C000000, 0 0 2 0 #10000000"/>
    </Style>

    <!-- Elevated card: deeper shadow, no border -->
    <Style Selector="Border.elevated-card">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusLg}"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BoxShadow" Value="0 4 12 0 #20000000, 0 1 4 0 #14000000"/>
    </Style>

    <!-- Stat card: elevated background for dashboard metric tiles, lifts on hover -->
    <Style Selector="Border.stat-card">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusLg}"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BoxShadow" Value="0 1 3 0 #10000000, 0 0 1 0 #0C000000"/>
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="CubicEaseOut"/>
                <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.stat-card:pointerover">
        <Setter Property="RenderTransform" Value="translateY(-2px)"/>
        <Setter Property="BoxShadow" Value="0 6 20 0 #22000000, 0 2 6 0 #14000000"/>
    </Style>

    <!-- List item card: lift + shadow on hover, no background change (for sidebar list items) -->
    <Style Selector="Border.item-card">
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="CubicEaseOut"/>
                <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.item-card:pointerover">
        <Setter Property="RenderTransform" Value="translateY(-1px)"/>
        <Setter Property="BoxShadow" Value="0 4 12 0 #18000000, 0 1 3 0 #0E000000"/>
    </Style>

    <!-- Nav accent bar: 3px left accent strip for active nav items -->
    <Style Selector="Border.nav-accent-bar">
        <Setter Property="Width" Value="3"/>
        <Setter Property="CornerRadius" Value="0,2,2,0"/>
        <Setter Property="Background" Value="{DynamicResource ThemeNavAccentBarBrush}"/>
    </Style>

    <!-- Section divider: 1px horizontal rule between sections -->
    <Style Selector="Border.section-divider">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="{DynamicResource ThemeBorderSubtleBrush}"/>
        <Setter Property="Margin" Value="0,16"/>
    </Style>

    <!-- Shadow-only utility classes (no background/padding/radius overrides) -->
    <Style Selector="Border.shadow-sm">
        <Setter Property="BoxShadow" Value="0 1 4 0 #0A000000, 0 1 2 0 #06000000"/>
    </Style>
    <Style Selector="Border.shadow-md">
        <Setter Property="BoxShadow" Value="0 4 16 0 #14000000, 0 1 4 0 #0A000000"/>
    </Style>
    <Style Selector="Border.shadow-lg">
        <Setter Property="BoxShadow" Value="0 8 32 0 #28000000, 0 2 8 0 #14000000"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- BADGE/TAG STYLES                                                         -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Border.badge">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusFull}"/>
        <Setter Property="Padding" Value="8,3"/>
    </Style>

    <Style Selector="Border.badge-success">
        <Setter Property="Background" Value="{DynamicResource ThemeSuccessMutedBrush}"/>
    </Style>

    <Style Selector="Border.badge-warning">
        <Setter Property="Background" Value="{DynamicResource ThemeWarningMutedBrush}"/>
    </Style>

    <Style Selector="Border.badge-error">
        <Setter Property="Background" Value="{DynamicResource ThemeDangerMutedBrush}"/>
    </Style>

    <Style Selector="Border.badge-info">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryMutedBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- TYPOGRAPHY HIERARCHY STYLES                                             -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Subheading: designed category label — spaced, small, uppercase feel -->
    <Style Selector="TextBlock.subheading">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextMutedBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="LetterSpacing" Value="0.8"/>
    </Style>

    <!-- Page heading: large title for view headers -->
    <Style Selector="TextBlock.page-heading">
        <Setter Property="FontSize" Value="{DynamicResource ThemeFontSizeHeading1}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <!-- Section heading: medium heading for card/section titles -->
    <Style Selector="TextBlock.section-heading">
        <Setter Property="FontSize" Value="{DynamicResource ThemeFontSizeHeading3}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- Caption: small metadata text -->
    <Style Selector="TextBlock.caption">
        <Setter Property="FontSize" Value="{DynamicResource ThemeFontSizeCaption}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextMutedBrush}"/>
    </Style>

    <!-- Display: hero numbers for dashboards -->
    <Style Selector="TextBlock.display">
        <Setter Property="FontSize" Value="{DynamicResource ThemeFontSizeDisplay}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <!-- Plugin title: 20px SemiBold heading for plugin cards -->
    <Style Selector="TextBlock.plugin-title">
        <Setter Property="FontSize" Value="{DynamicResource ThemeFontSizePluginTitle}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <!-- Hero number: large stat number for dashboard metric tiles -->
    <Style Selector="TextBlock.hero-number">
        <Setter Property="FontSize" Value="{DynamicResource ThemeFontSize3Xl}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <!-- Empty state heading: centered title in empty state panels -->
    <Style Selector="TextBlock.empty-state-heading">
        <Setter Property="FontSize" Value="{DynamicResource ThemeFontSizeHeading2}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <!-- Empty state message: centered body text below heading -->
    <Style Selector="TextBlock.empty-state-message">
        <Setter Property="FontSize" Value="{DynamicResource ThemeFontSizeBody}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextMutedBrush}"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- PROGRESSIVE DISCLOSURE STYLES                                           -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Row actions: hidden until parent hover -->
    <Style Selector="StackPanel.row-actions">
        <Setter Property="Opacity" Value="0"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.list-row:pointerover StackPanel.row-actions">
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="IsHitTestVisible" Value="True"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- BORDERLESS LIST ROW STYLES                                              -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Plugin data row: card-per-row with gap instead of border separators -->
    <Style Selector="Border.data-row">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusMd}"/>
        <Setter Property="Padding" Value="16,14"/>
        <Setter Property="Margin" Value="0,3"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.data-row:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- MODAL STYLES                                                            -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Border.modal">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusXl}"/>
        <Setter Property="Padding" Value="32"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="BoxShadow" Value="0 8 32 0 #28000000, 0 2 8 0 #14000000"/>
        <Setter Property="MaxWidth" Value="560"/>
    </Style>

    <Style Selector="Border.modal-backdrop">
        <Setter Property="Background" Value="#80000000"/>
    </Style>

    <Style Selector="Border.modal-backdrop-light">
        <Setter Property="Background" Value="#40000000"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- RECESSED PANEL STYLE                                                    -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Border.recessed-panel">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceRecessedBrush}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusLg}"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- STATUS INDICATOR STYLES                                                  -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Border.status-indicator">
        <Setter Property="Width" Value="8"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <Style Selector="Border.status-indicator.success">
        <Setter Property="Background" Value="{DynamicResource ThemeSuccessBrush}"/>
    </Style>

    <Style Selector="Border.status-indicator.warning">
        <Setter Property="Background" Value="{DynamicResource ThemeWarningBrush}"/>
    </Style>

    <Style Selector="Border.status-indicator.error">
        <Setter Property="Background" Value="{DynamicResource ThemeDangerBrush}"/>
    </Style>

    <Style Selector="Border.status-indicator.info">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- TOOLTIP STYLES                                                           -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="ToolTip">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusSm}"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- WINDOW STYLES                                                            -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Window">
        <Setter Property="Background" Value="{DynamicResource ThemeBackgroundBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- TEXT STYLES                                                              -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Panel header -->
    <Style Selector="TextBlock.panel-header">
        <Setter Property="FontSize" Value="{DynamicResource ThemeFontSizeLg}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <!-- Section header -->
    <Style Selector="TextBlock.section-header">
        <Setter Property="FontSize" Value="{DynamicResource ThemeFontSizeMd}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <!-- Subtext/muted text -->
    <Style Selector="TextBlock.subtext">
        <Setter Property="FontSize" Value="{DynamicResource ThemeFontSizeSm}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextMutedBrush}"/>
    </Style>

    <!-- Secondary text -->
    <Style Selector="TextBlock.secondary">
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextSecondaryBrush}"/>
    </Style>

    <!-- Keyboard shortcut display -->
    <Style Selector="TextBlock.kbd">
        <Setter Property="FontFamily" Value="{DynamicResource ThemeFontMono}"/>
        <Setter Property="FontSize" Value="{DynamicResource ThemeFontSizeXsSm}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemePrimaryBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- FOCUS STYLES                                                             -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector=":is(Control):focus-visible">
        <Setter Property="Opacity" Value="1"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- PROGRESSBAR STYLES                                                       -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="ProgressBar">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemePrimaryBrush}"/>
        <Setter Property="MinHeight" Value="6"/>
        <Setter Property="CornerRadius" Value="3"/>
    </Style>

    <Style Selector="ProgressBar:indeterminate /template/ Border#PART_Indicator">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- COMBOBOX STYLES                                                          -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="ComboBox">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusSm}"/>
    </Style>

    <Style Selector="ComboBox:pointerover /template/ Border#Background">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
    </Style>

    <Style Selector="ComboBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <Style Selector="ComboBoxItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
    </Style>

    <Style Selector="ComboBoxItem:selected /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeSelectedBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- CHECKBOX STYLES                                                          -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="CheckBox">
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <Style Selector="CheckBox /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemePrimaryBrush}"/>
    </Style>

    <Style Selector="CheckBox:indeterminate /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemePrimaryBrush}"/>
    </Style>

    <Style Selector="CheckBox:checked:pointerover /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryHoverBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemePrimaryHoverBrush}"/>
    </Style>

    <Style Selector="CheckBox:indeterminate:pointerover /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryHoverBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemePrimaryHoverBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- EXPANDER STYLES                                                          -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Expander">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <!-- Settings section expander: card-like sections with consistent margin -->
    <Style Selector="Expander.settings-section">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,4"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- TABCONTROL STYLES                                                        -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="TabControl">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="TabItem">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextMutedBrush}"/>
        <Setter Property="Padding" Value="16,8"/>
    </Style>

    <Style Selector="TabItem:selected">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <Style Selector="TabItem:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- SEPARATOR STYLES                                                         -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Separator">
        <Setter Property="Background" Value="{DynamicResource ThemeBorderBrush}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="0,8"/>
    </Style>

    <!-- Separators inside menus: softer, inset -->
    <Style Selector="ContextMenu > Separator, MenuFlyoutPresenter > Separator">
        <Setter Property="Background" Value="{DynamicResource ThemeBorderSubtleBrush}"/>
        <Setter Property="Margin" Value="8,4"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- MENU STYLES                                                              -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Menu">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceBrush}"/>
    </Style>

    <!-- MenuItem — base state -->
    <Style Selector="MenuItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="MinHeight" Value="34"/>
        <Setter Property="FontSize" Value="{DynamicResource ThemeFontSizeSmMd}"/>
    </Style>

    <!-- MenuItem inner border — rounded corners + smooth background transition -->
    <Style Selector="MenuItem /template/ Border#PART_LayoutRoot">
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusXs}"/>
        <Setter Property="Margin" Value="2,0"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

    <!-- MenuItem hover — smooth fade-in background -->
    <Style Selector="MenuItem:pointerover /template/ Border#PART_LayoutRoot">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
    </Style>

    <!-- MenuItem pressed — slightly stronger background -->
    <Style Selector="MenuItem:pressed /template/ Border#PART_LayoutRoot">
        <Setter Property="Background" Value="{DynamicResource ThemePressedBrush}"/>
    </Style>

    <!-- MenuItem selected (keyboard nav / open submenu) -->
    <Style Selector="MenuItem:selected /template/ Border#PART_LayoutRoot">
        <Setter Property="Background" Value="{DynamicResource ThemeSelectedBrush}"/>
    </Style>

    <!-- MenuItem disabled — faded text -->
    <Style Selector="MenuItem:disabled">
        <Setter Property="Opacity" Value="0.4"/>
    </Style>

    <!-- MenuItem submenu arrow — muted until hovered -->
    <Style Selector="MenuItem /template/ Path#PART_ChevronPath">
        <Setter Property="Fill" Value="{DynamicResource ThemeTextMutedBrush}"/>
        <Setter Property="Width" Value="10"/>
        <Setter Property="Height" Value="10"/>
    </Style>
    <Style Selector="MenuItem:pointerover /template/ Path#PART_ChevronPath">
        <Setter Property="Fill" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <!-- MenuFlyoutPresenter (popup container for MenuFlyout) -->
    <Style Selector="MenuFlyoutPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusMd}"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="MinWidth" Value="180"/>
    </Style>
    <Style Selector="MenuFlyoutPresenter /template/ Border">
        <Setter Property="BoxShadow" Value="0 8 24 0 #40000000, 0 2 6 0 #28000000"/>
    </Style>

    <!-- Context Menu -->
    <Style Selector="ContextMenu">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusMd}"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="MinWidth" Value="180"/>
        <Setter Property="MaxWidth" Value="320"/>
    </Style>
    <Style Selector="ContextMenu /template/ Border">
        <Setter Property="BoxShadow" Value="0 8 24 0 #40000000, 0 2 6 0 #28000000"/>
    </Style>

    <!-- Submenu popup container — same elevated treatment -->
    <Style Selector="MenuItem > Popup > Border">
        <Setter Property="BoxShadow" Value="0 8 24 0 #40000000, 0 2 6 0 #28000000"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- SLIDER STYLES                                                            -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Slider /template/ Track#PART_Track">
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style Selector="Slider /template/ Thumb">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryBrush}"/>
    </Style>

    <Style Selector="Slider /template/ RepeatButton#PART_DecreaseButton">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryBrush}"/>
    </Style>

    <Style Selector="Slider /template/ RepeatButton#PART_IncreaseButton">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- RADIO BUTTON STYLES                                                      -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="RadioButton">
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <Style Selector="RadioButton /template/ Ellipse#OuterEllipse">
        <Setter Property="Stroke" Value="{DynamicResource ThemeBorderBrush}"/>
        <Setter Property="Fill" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
    </Style>

    <Style Selector="RadioButton:checked /template/ Ellipse#OuterEllipse">
        <Setter Property="Stroke" Value="{DynamicResource ThemePrimaryBrush}"/>
    </Style>

    <Style Selector="RadioButton:checked /template/ Ellipse#CheckGlyph">
        <Setter Property="Fill" Value="{DynamicResource ThemePrimaryBrush}"/>
    </Style>

    <Style Selector="RadioButton:checked:pointerover /template/ Ellipse#OuterEllipse">
        <Setter Property="Stroke" Value="{DynamicResource ThemePrimaryHoverBrush}"/>
    </Style>

    <Style Selector="RadioButton:checked:pointerover /template/ Ellipse#CheckGlyph">
        <Setter Property="Fill" Value="{DynamicResource ThemePrimaryHoverBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- TOGGLE SWITCH STYLES                                                     -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="ToggleSwitch /template/ Border#OuterBorder">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderBrush}"/>
    </Style>

    <Style Selector="ToggleSwitch:checked /template/ Border#OuterBorder">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemePrimaryBrush}"/>
    </Style>

    <Style Selector="ToggleSwitch:checked:pointerover /template/ Border#OuterBorder">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryHoverBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemePrimaryHoverBrush}"/>
    </Style>

    <Style Selector="ToggleSwitch /template/ Border#SwitchKnobBounds">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
    </Style>

    <Style Selector="ToggleSwitch /template/ Border#SwitchKnobOn">
        <Setter Property="Background" Value="{DynamicResource ThemeTextOnAccentBrush}"/>
    </Style>

    <Style Selector="ToggleSwitch /template/ Border#SwitchKnobOff">
        <Setter Property="Background" Value="{DynamicResource ThemeTextMutedBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- TOGGLE BUTTON STYLES                                                      -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Force Fluent theme ToggleButton template to respect our Background in all states -->
    <Style Selector="ToggleButton /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{TemplateBinding Background}"/>
    </Style>
    <Style Selector="ToggleButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{TemplateBinding Background}"/>
    </Style>
    <Style Selector="ToggleButton:checked /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{TemplateBinding Background}"/>
    </Style>
    <Style Selector="ToggleButton:checked:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{TemplateBinding Background}"/>
    </Style>

    <Style Selector="ToggleButton:checked">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextOnAccentBrush}"/>
    </Style>

    <Style Selector="ToggleButton:checked:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryHoverBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextOnAccentBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- AUTOCOMPLETE BOX STYLES                                                   -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="AutoCompleteBox">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderBrush}"/>
    </Style>

    <Style Selector="AutoCompleteBox:focus /template/ Border">
        <Setter Property="BorderBrush" Value="{DynamicResource ThemePrimaryBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- DATEPICKER / TIMEPICKER STYLES                                           -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="DatePicker">
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <Style Selector="DatePicker /template/ Button">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <Style Selector="TimePicker">
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <Style Selector="TimePicker /template/ Button">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- CALENDAR STYLES                                                          -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Calendar">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <Style Selector="CalendarDayButton">
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <Style Selector="CalendarDayButton:selected">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeBackgroundBrush}"/>
    </Style>

    <Style Selector="CalendarDayButton:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- TREEVIEW STYLES                                                          -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="TreeView">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="TreeViewItem">
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <Style Selector="TreeViewItem:selected /template/ Border#PART_LayoutRoot">
        <Setter Property="Background" Value="{DynamicResource ThemeSelectedBrush}"/>
    </Style>

    <Style Selector="TreeViewItem:pointerover /template/ Border#PART_LayoutRoot">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
    </Style>

    <Style Selector="TreeViewItem /template/ ToggleButton#PART_ExpandCollapseChevron">
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- NUMERICUPDOWN STYLES                                                     -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="NumericUpDown">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderBrush}"/>
    </Style>

    <Style Selector="NumericUpDown:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource ThemePrimaryBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- AVALONIAEDIT TEXT EDITOR STYLES                                          -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="ae|TextEditor">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <Style Selector="ae|TextEditor aeRendering|TextView">
        <Setter Property="CurrentLineBackground" Value="{DynamicResource ThemeHoverBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- VIEW TOGGLE STYLES (global — used by all plugin view mode toggles)       -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Button.view-toggle">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextMutedBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusSm}"/>
        <Setter Property="FontSize" Value="{DynamicResource ThemeFontSizeSm}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.12"/>
                <BrushTransition Property="Foreground" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.view-toggle:pointerover">
        <Setter Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
    </Style>

    <Style Selector="Button.view-toggle.active">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- FLYOUT / POPUP STYLES                                                    -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->

    <Style Selector="FlyoutPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeSurfaceElevatedBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ThemeRadiusMd}"/>
        <Setter Property="Padding" Value="{DynamicResource ThemePaddingMd}"/>
        <Setter Property="MinWidth" Value="200"/>
    </Style>

</Styles>
